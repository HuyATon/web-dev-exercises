<div style="height: 100vh" class="d-flex flex-column justify-content-center align-items-center">
    <form class="form-signin w-25 p-4 bg-light rounded border text-center"
          action="/login"
          method="POST"
    >
        <h1 class="h3 mb-3 font-weight-normal"> Đăng Nhập </h1>
        <input
                type="text"
                id="username"
                class="form-control mb-3"
                placeholder="username"
                required=""
                autofocus=""
                name="username"
                value="admin"
        />
        <input
                type="password"
                id="password"
                class="form-control"
                placeholder="password"
                required=""
                name="password"
                value="admin"
        />

        <button class="btn btn-lg btn-primary btn-block my-4" type="submit"> Đăng Nhập </button>
        <p>Chưa có tài khoản? <a href="/register">Đăng ký</a></p>

    </form>
</div>