<div style="height: 100vh" class="d-flex flex-column justify-content-center align-items-center">
    <form class="form-signin w-25 p-4 bg-light rounded border text-center">
  <h1 class="h3 mb-3 font-weight-normal"> Sign In </h1>
  <input
    type="text"
    id="username"
    class="form-control mb-3"
    placeholder="username"
    required=""
    autofocus=""
    name="username"
  />
  <input
    type="password"
    id="password"
    class="form-control"
    placeholder="password"
    required=""
    name="password"
  />

  <button class="btn btn-lg btn-primary btn-block my-4" type="submit"> Sign In </button>
  <p>Don't have an account? <a href="/register">Register</a></p>

</form>
</div>