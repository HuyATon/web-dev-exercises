  <div class="text-light border border-secondary rounded p-3">
    <form action="/confirm" method="post">
      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label text-end">Name</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control border border-secondary bg-dark text-white"
            id="name"
            placeholder="Name"
            required
            name="name"
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <label f class="col-sm-2 col-form-label text-end">Email address</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control border border-secondary bg-dark text-white"
            id="email"
            placeholder="Enter email"
            required
            name="email"
          />
        </div>
      </div>
      <div class="form-group row mb-3">
        <div class="col-sm-2 col-form-label text-end me-2"></div>
        <div class="form-check col">
          <input
            class="form-check-input bg-dark border border-secondary"
            type="checkbox"
            id="willAttend"
            name="willAttend"
            value="yes"
          />
          <label class="form-check-label" for="flexCheckDefault">
            Will you attend?
          </label>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>